{
  "version": "1.0.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "ignore": "npm-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "packages": [
    "workspace/*",
    "applications/domains/*",
    "applications/platforms/*",
    "shared/*"
  ]
}
